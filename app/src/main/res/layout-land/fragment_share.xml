<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.share.ShareFragment">

    <SearchView
        android:id="@+id/share_box"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:background="#8BD6D6D6"
        android:backgroundTint="#8BD6D6D6"
        android:queryHint="Invite User"
        android:tooltipText="Invite User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/send_24"
        app:layout_constraintStart_toEndOf="@id/share_box"
        app:layout_constraintTop_toTopOf="@id/share_box"
        app:layout_constraintBottom_toBottomOf="@id/share_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>