<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_status_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/error_24dp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/eventTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/item_status_icon"
        app:layout_constraintTop_toTopOf="@id/item_status_icon"
        android:text="Event Title"
        android:textSize="16sp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/eventTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/eventTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/eventTitleTextView"
        android:text="Event Time"
        android:textSize="14sp"
        android:textColor="#666666"
        android:clickable="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
